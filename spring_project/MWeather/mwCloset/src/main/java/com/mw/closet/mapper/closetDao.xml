<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mw.closet.dao.ClosetDao">

<resultMap type="com.mw.closet.domain.Closet" id="listResult">
 <id column="cIdx" property="cIdx"/>
 <result column="memIdx" property="memIdx"/>
  <result column="cName" property="cName"/>
   <result column="cPhotoOut" property="cPhotoOut"/>
    <result column="cLikeCnt" property="cLikeCnt"/>
     <result column="cBmkCnt" property="cBmkCnt"/>
</resultMap>

<!-- 리스트 출력 -->
 <select id="selectAll" resultMap="listResult">
   	select cIdx, memIdx, cName, cPhotoOut, cLikeCnt, cBmkCnt from tbl_cList 
 </select>

<!-- 코디 대분류 출력 -->
 <select id="getCodiSet" resultType="com.mw.closet.domain.Codi">
 	select codiList, codiPho from tbl_Codi
 </select>

<!-- 클로젯 글 저장 -->
 <insert id="insertClosetWrite" parameterType="com.mw.closet.domain.ClosetWriteRequest" useGeneratedKeys="true" keyProperty="cIdx">
 	INSERT INTO tbl_cList (memIdx, cName, cPhotoOut, cText) VALUES
 		(#{memIdx},#{cName},#{cPhotoOut},#{cText}) 
 </insert>
	


</mapper>